{
  "manifest_version": 2,
  "name": "GitHub Code Review File Minimizer",
  "description": "Automatically minimizes code file content for those files you don't normally care about",
  "version": "0.0.0.1",
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "jquery-3.2.1.slim.min.js",
        "contentScript.js"
      ],
      "run_at" : "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "unlimitedStorage",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}