{
  "manifest_version": 2,
  "name": "GitHub Pull Request Helper",
  "description": "Adds functionality to GitHub's pull request pages that increase",
  "version": "0.0.0.1",
  "content_scripts": [
    {
      "matches": [
        "https://*/*/*/pull/*/files"
      ],
      "js": [
        "jquery-3.2.1.slim.min.js",
        "contentScript.js"
      ],
      "run_at" : "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "unlimitedStorage",
    "storage",
    "tabs",
    "https://*/*/*/pull/*/files"
  ]
}